pkgname=${AUR_PACKAGE_NAME}
pkgver=${CARGO_PKG_VERSION}
pkgrel=1
pkgdesc="${CARGO_PKG_DESCRIPTION}"
arch=('x86_64' 'aarch64')
url="${CARGO_PKG_HOMEPAGE}"
license=('gpl-3')
depends=('cairo' 'desktop-file-utils' 'gdk-pixbuf2' 'glib2' 'gtk3' 'hicolor-icon-theme' 'libsoup' 'pango' 'webkit2gtk-4.1')
options=('!strip' '!emptydirs')
install=${pkgname}.install
source_x86_64=("https://github.com/${AUR_GITHUB_REPO}/releases/download/v$pkgver/${AUR_DEB_PREFIX}_"$pkgver"_amd64.deb")
source_aarch64=("https://github.com/${AUR_GITHUB_REPO}/releases/download/v$pkgver/${AUR_DEB_PREFIX}_"$pkgver"_arm64.deb")

package() {

  # Extract package data
  tar -xz -f data.tar.gz -C "${pkgdir}"

}